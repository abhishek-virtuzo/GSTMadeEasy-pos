<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Other Charges"
            android:textSize="25sp"
            android:paddingLeft="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="Transport Charges"
                        android:gravity="left|center"
                        android:layout_weight="1"
                        android:paddingRight="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Insurance Charges"
                        android:gravity="left|center"
                        android:layout_weight="1"
                        android:paddingRight="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Packing Charges"
                        android:gravity="left|center"
                        android:layout_weight="1"
                        android:paddingRight="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/transportChargesEditText"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:layout_margin="5dp"
                    android:maxLength="10"
                    android:padding="5dp"
                    android:hint="0"
                    android:background="@drawable/invoicepaymentlayout_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/insuranceChargesEditText"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:padding="5dp"
                    android:hint="0"
                    android:background="@drawable/invoicepaymentlayout_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/packingChargesEditText"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:padding="5dp"
                    android:hint="0"
                    android:background="@drawable/invoicepaymentlayout_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textSize="20sp"
                android:text="CGST"
                android:textColor="@color/my_spinner_text_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/cgstEditText"
                android:padding="6dp"
                android:gravity="top"
                android:inputType="numberDecimal"
                android:maxLength="10"
                android:maxLines="1"
                android:hint="0"
                android:background="@drawable/invoicepaymentlayout_bg"
                android:selectAllOnFocus="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textSize="20sp"
                android:text="SGST"
                android:textColor="@color/my_spinner_text_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/sgstEditText"
                android:padding="6dp"
                android:gravity="top"
                android:inputType="numberDecimal"
                android:maxLength="10"
                android:maxLines="1"
                android:hint="0"
                android:background="@drawable/invoicepaymentlayout_bg"
                android:selectAllOnFocus="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textSize="20sp"
                android:text="IGST"
                android:textColor="@color/my_spinner_text_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/igstEditText"
                android:padding="6dp"
                android:gravity="top"
                android:inputType="numberDecimal"
                android:maxLength="10"
                android:maxLines="1"
                android:hint="0"
                android:background="@drawable/invoicepaymentlayout_bg"
                android:selectAllOnFocus="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:visibility="gone"
            android:orientation="vertical">

            <TextView
                android:textSize="20sp"
                android:text="CESS"
                android:id="@+id/headingTextView"
                android:textColor="@color/my_spinner_text_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/cessEditText"
                android:inputType="numberDecimal"
                android:padding="6dp"
                android:gravity="top"
                android:maxLength="10"
                android:maxLines="1"
                android:hint="0"
                android:background="@drawable/invoicepaymentlayout_bg"
                android:selectAllOnFocus="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/okButtonOtherChargesInNewInvoice"
        android:layout_margin="2dp"
        android:background="@color/colorAccent"
        android:textColor="@color/white"
        android:text="Ok"
        android:textSize="25sp"/>

</LinearLayout>