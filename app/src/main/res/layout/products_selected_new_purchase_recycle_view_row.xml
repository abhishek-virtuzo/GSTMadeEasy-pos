<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e8e7e7"
        app:cardPreventCornerOverlap="false"
        android:padding="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/rightLayoutInProductSelectedList">

                <TextView
                    android:id="@+id/selectedProductNameInNewInvoiceTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/product_name"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:textSize="16dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/rateQtyInNewInvoiceTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/holo_blue_dark"
                        android:layout_marginTop="10dp"
                        android:textSize="15dp"
                        android:text="@string/Rs" />

                    <TextView
                        android:id="@+id/selectedProductSalesPriceInNewInvoiceTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/holo_blue_dark"
                        android:layout_marginTop="10dp"
                        android:textSize="15dp"
                        android:text="@string/Rs" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <!--android:id="@+id/rateQtyInNewInvoiceTextView"-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/holo_blue_dark"
                        android:layout_marginTop="10dp"
                        android:textSize="15dp"
                        android:text="Tax :" />

                    <TextView
                        android:id="@+id/selectedProductTotalTaxInNewInvoiceTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/holo_blue_dark"
                        android:layout_marginTop="10dp"
                        android:textSize="15dp"
                        android:text="@string/Rs" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rightLayoutInProductSelectedList"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center|right">

                <ImageButton
                    android:id="@+id/selectedProductCancelButton"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:backgroundTint="@color/common_signin_btn_default_background"
                    android:background="@android:drawable/ic_menu_delete"/>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
