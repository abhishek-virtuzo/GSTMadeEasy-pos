<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar_dashboard"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></include>


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="2.5dp"
            tools:context="com.virtuzoconsultancyservicespvtltd.ahprepaid.DashBoardScreen">


            <FrameLayout
                android:id="@+id/frameText"
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:layout_below="@id/toolbar_dashboard"
                android:background="@android:color/darker_gray"
                android:layout_margin="2.5dp">

                <include layout="@layout/framelayout_text"></include>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/frameSimActive"
                    android:layout_width="0dp"
                    android:layout_height="145dp"
                    android:layout_weight="1"
                    android:background="@android:color/holo_red_light"
                    android:layout_margin="2.5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/simactivateicon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:text="Sim Activate"
                            android:textColor="@android:color/white"
                            android:textSize="15sp" />
                    </LinearLayout>


                </FrameLayout>

                <FrameLayout
                    android:id="@+id/PortIn"
                    android:layout_width="0dp"
                    android:layout_height="145dp"
                    android:layout_margin="2.5dp"
                    android:layout_weight="1"
                    android:background="#9b59b6">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/portlnicon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:text="Port ln"
                            android:textColor="@android:color/white"
                            android:textSize="15sp" />

                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:id="@+id/frameTopupBalance"
                    android:layout_width="0dp"
                    android:layout_height="145dp"
                    android:layout_below="@+id/framedateAndTime"
                    android:layout_weight="1"
                    android:layout_margin="2.5dp"
                    android:background="#34495e">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/topupbalanceicon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:text="Topup Balance"
                            android:textColor="@android:color/white"
                            android:textSize="15sp" />
                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/frameRechargeSim"
                    android:layout_width="0dp"
                    android:layout_height="145dp"
                    android:layout_weight="1"
                    android:layout_margin="2.5dp"
                    android:background="#f39c12">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/rechargesimicon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:text="Recharge Sim"
                            android:textColor="@android:color/white"
                            android:textSize="15sp" />
                    </LinearLayout>
                </FrameLayout>

            </LinearLayout>

            <FrameLayout
                android:id="@+id/framedateAndTime"
                android:layout_width="150dp"
                android:layout_height="145dp"
                android:layout_below="@+id/frameSimActive"
                android:layout_margin="5dp"
                android:background="#bdc3c7"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imgDateAndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp"
                    android:padding="5dp"
                    android:src="@drawable/time" />

                <TextView
                    android:id="@+id/dateAndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="100dp"
                    android:padding="5dp"
                    android:text="Date And Time"
                    android:textColor="@android:color/white"
                    android:textSize="15sp" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frameSimReplacement"
                android:layout_width="220dp"

                android:layout_height="145dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/frameSimActive"
                android:layout_margin="5dp"
                android:layout_toRightOf="@+id/framedateAndTime"
                android:background="#2ecc71"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/simreplacementicon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="45dp"
                    android:padding="10dp"
                    android:text="Sim Replacement"
                    android:textColor="@android:color/white"
                    android:textSize="15sp" />

            </FrameLayout>


        </LinearLayout>


    </ScrollView>

</LinearLayout>