<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/themeColor"
    android:focusableInTouchMode="true"
    tools:context="com.virtuzo.abhishek.UserLoginApi$Login">

    <Button
        android:id="@+id/wifiButton"
        android:onClick = "wifiButtomClick"
        android:background="@drawable/icon_wifi"
        android:layout_toLeftOf="@+id/setupButton"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="48dp"
        android:layout_height="48dp" />

    <Button
        android:id="@+id/setupButton"
        android:onClick = "setupButtomClick"
        android:background="@drawable/gear_white"
        android:layout_toLeftOf="@+id/switchKeyboardButton"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="48dp"
        android:layout_height="48dp" />

    <Button
        android:id="@+id/switchKeyboardButton"
        android:onClick = "switchKeyboardButton"
        android:background="@drawable/ic_keyboard_white_48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="72dp"
        android:layout_height="56dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_above="@+id/linearLayout"
        android:src="@drawable/logow_white"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="200dp"
        android:paddingRight="200dp"
        android:paddingTop="@dimen/activity_vertical_margin">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/businessIdLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#ffffff"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textColorHint="#000000">

            <EditText
                android:id="@+id/businessIdEditText"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@null"
                android:hint="Client Code"
                android:singleLine="true"
                android:textColor="#000000" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tabCodeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textColorHint="#000000">

            <EditText
                android:id="@+id/tabCodeEditText"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:maxLength="2"
                android:background="@null"
                android:hint="@string/tab_code"
                android:inputType="textFilter"
                android:singleLine="true"
                android:textColor="#000000" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/userIdLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textColorHint="#000000">

            <EditText
                android:id="@+id/userIdEditText"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@null"
                android:hint="@string/username"
                android:singleLine="true"
                android:textColor="#000000" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/passwordLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textColorHint="#000000">

            <EditText
                android:id="@+id/passwordEditText"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@null"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="#000000" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/userLoginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:background="#ee1c25"
            android:text="@string/signin"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="#fff"
            android:textSize="20dp" />

    </LinearLayout>

</RelativeLayout>
